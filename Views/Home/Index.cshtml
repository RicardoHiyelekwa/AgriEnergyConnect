@using Microsoft.AspNetCore.Identity
@using AgriEnergyConnect.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-success animate__animated animate__fadeInDown">
            <i class="bi bi-leaf"></i> AgriEnergy Connect
        </h1>
        <p class="lead text-muted animate__animated animate__fadeIn">
            Empowering sustainable farming through green energy innovation.
        </p>
    </div>

    @if (!SignInManager.IsSignedIn(User))
    {
        <!-- Usuário NÃO logado -->
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card border-0 shadow-lg hover-card animate__animated animate__fadeInUp">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-person-circle text-success display-3 mb-3"></i>
                        <h4 class="fw-bold text-success mb-3">Farmer Portal</h4>
                        <p class="text-muted">Manage your production, view analytics, and connect with energy initiatives.</p>
                        <a asp-controller="Account" asp-action="Login" asp-route-role="Farmer"
                           class="btn btn-success btn-lg btn-rounded mt-3 px-4 py-2 w-100 shadow-sm login-btn">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Login as Farmer
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-5 mt-4 mt-md-0">
                <div class="card border-0 shadow-lg hover-card animate__animated animate__fadeInUp">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-briefcase-fill text-primary display-3 mb-3"></i>
                        <h4 class="fw-bold text-primary mb-3">Employee Portal</h4>
                        <p class="text-muted">Access tools to manage farmers, monitor progress, and track sustainability goals.</p>
                        <a asp-controller="Account" asp-action="Login" asp-route-role="Employee"
                           class="btn btn-primary btn-lg btn-rounded mt-3 px-4 py-2 w-100 shadow-sm login-btn">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Login as Employee
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Usuário LOGADO -->
        <div class="card shadow-lg border-0 mx-auto text-center p-5 animate__animated animate__fadeIn" style="max-width: 700px;">
            <div class="card-body">
                <h3 class="text-success mb-3 fw-bold">
                    <i class="bi bi-person-check-fill me-2"></i> Welcome back, @User.Identity?.Name!
                </h3>
                <p class="text-muted mb-4">You are successfully logged in. Select your dashboard below to continue:</p>

                @if (User.IsInRole("Farmer"))
                {
                    <a asp-controller="FarmerProducts" asp-action="Index"
                       class="btn btn-outline-success btn-lg btn-rounded px-4 py-2 shadow-sm">
                        <i class="bi bi-box-seam me-2"></i> Go to Farmer Dashboard
                    </a>
                }
                else if (User.IsInRole("Employee"))
                {
                    <a asp-controller="Employee" asp-action="Index"
                       class="btn btn-outline-primary btn-lg btn-rounded px-4 py-2 shadow-sm">
                        <i class="bi bi-people-fill me-2"></i> Go to Employee Dashboard
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script>
        // Adiciona um pequeno efeito de "click loading" nos botões de login
        document.querySelectorAll(".login-btn").forEach(btn => {
            btn.addEventListener("click", function () {
                const originalText = btn.innerHTML;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Logging in...';
                btn.classList.add("loading");
                btn.disabled = true;
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }, 4000);
            });
        });
    </script>
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hover-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 0.75rem 1.25rem rgba(0, 0, 0, 0.15);
            }

        .btn-rounded {
            border-radius: 50px;
        }

        .btn.loading {
            opacity: 0.85;
            pointer-events: none;
        }
    </style>
}
