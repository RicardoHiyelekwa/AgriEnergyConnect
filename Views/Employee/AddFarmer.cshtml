<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-warning text-dark">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Add Farmer Profile</h4>
      </div>
      <div class="card-body">
        <form method="post">
          <div class="mb-3">
              <label class="form-label">Name</label>
              <input class="form-control" name="name" placeholder="Farmer Name" />
          </div>
          <div class="mb-3">
              <label class="form-label">Email</label>
              <input class="form-control" name="email" placeholder="farmer@example.com" />
          </div>
          <button class="btn btn-success rounded-pill"><i class="bi bi-check2-circle me-1"></i> Create Farmer</button>
          <a class="btn btn-link" href="/Employee/Index"><i class="bi bi-x-circle me-1"></i> Cancel</a>

          <div class="text-danger mt-2">
            @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div><i class="bi bi-exclamation-triangle me-1"></i>@err.ErrorMessage</div>
            }
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
