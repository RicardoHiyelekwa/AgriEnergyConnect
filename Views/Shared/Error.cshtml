@model Microsoft.AspNetCore.Mvc.IErrorHandlerFeature

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow-lg border-danger">
      <div class="card-header bg-danger text-light">
        <h4 class="mb-0"><i class="bi bi-exclamation-octagon-fill me-2"></i>Oops! Something went wrong</h4>
      </div>
      <div class="card-body">
        <p class="lead">An unexpected error occurred. Please try again later.</p>
        <a class="btn btn-outline-danger rounded-pill" href="/"><i class="bi bi-house-door me-1"></i> Back to Home</a>
      </div>
    </div>
  </div>
</div>
